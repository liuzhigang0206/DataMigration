<c3p0-config>
    <!-- SQL server数据库 使用默认的配置读取连接池对象 -->
    <default-config>
        <!--  连接参数 -->
        <property name="driverClass">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
       <!-- <property name="jdbcUrl">jdbc:sqlserver://192.168.1.232:1433;DatabaseName=CESHIKU</property>-->
        <property name="jdbcUrl">jdbc:sqlserver://localhost:1433;DatabaseName=sxzjs3</property>
        <property name="user">sa</property>
        <property name="password">root</property>

        <!-- 连接池参数 -->
        <property name="initialPoolSize">5</property>
        <property name="maxPoolSize">10</property>
        <property name="checkoutTimeout">2000</property>
        <property name="maxIdleTime">1000</property>
    </default-config>

    <named-config name="mysql">
        <!--  mySql数据库 连接参数 -->
        <property name="driverClass">com.mysql.cj.jdbc.Driver</property>
        <!--<property name="jdbcUrl">jdbc:mysql://172.16.1.15:3306/yszx4?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true</property>-->
        <property name="jdbcUrl">jdbc:mysql://localhost/eladmin?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true</property>
        <property name="user">root</property>
        <property name="password">root</property>

        <!-- 连接池参数 -->
        <property name="initialPoolSize">5</property>
        <property name="maxPoolSize">10</property>
        <property name="checkoutTimeout">2000</property>
        <property name="maxIdleTime">1000</property>
    </named-config>
</c3p0-config>